extends layout 


block content 

h1=title 

if authors.length > 0
   ul 
      each author in author_list 
         li 
            a(href=author.url) #{author.name}
else 
    p There are no authors.


if books.length > 0
   ul 
      each book in book_list
         li 
            a(href=book.url) #{book.title}
else 
    p There are no books.