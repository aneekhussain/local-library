extends layout 

block content 
   h1=title 

   
   if authors.length > 0
      ul 
         each author in authors 
            li 
               p Author(s)
               a(href=author.url) #{author.name}
   else 
      p Could not find the author with that name!


   if books.length > 0
      ul 
         each book in books
            li 
               p book(s)
               a(href=book.url) #{book.title}
   else 
      p Could not find any books with that title!