extends layout

block content

  h1 Author: #{author.name}
  img(src='../public/images/authors/' + author_image_path, alt="" width="100", height="100")

  p #{author.lifespan}
  
  div(style='margin-left:20px;margin-top:20px')
  

    h4 Books

    dl
      each book in author_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.
      
  hr
  p
    a(href=author.url+'/update') Update this author
  p 
    a(href=author.url+'/delete') Delete this author
  
